{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}

        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <table>
        <tr>
            <td><label for="inputEmail">Identifiant : </label></td>
            <td><input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></td>
        </tr>
        <tr>
            <td><label for="inputPassword">Mot de passe : </label></td>
            <td><input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required></td>
        </tr>

        <tr>
            <td><button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button></td>
            <td><div class="checkbox mb-3">

                    <label class="labelDescription">
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
                </div></td>
        </tr>
    </table>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >



    {# See https://symfony.com/doc/current/security/remember_me.html  #}





</form>
{% endblock %}
