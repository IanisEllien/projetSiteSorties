{% extends '/base.html.twig' %}

{% block title %}
    {{ parent() }} | sortie {{ sortie.nom }}
{% endblock %}

{% block body %}
<div class="afficherProfil">
    <h2 class="display-4">Afficher une sortie</h2>
    <div class="row">
        <div class="col">
         <table class="affichageSortie">
             <tr>
                <td class><label>Nom de la sortie :</label></td>
                <td>{{ sortie.nom }}</td>
            </tr>
             <tr>
                 <td><label>Date et heure de la sortie : </label></td>
                 <td>{{ sortie.dateHeureDebut | date ('d/m/o H\\Hi') }}</td>
             </tr>
             <tr>
                 <td><label>Date limite d'inscription : </label></td>
                 <td>{{ sortie.dateLimiteInscription | date('d/m/o') }}</td>
             </tr>
             <tr>
                 <td><label>Nombre de places : </label></td>
                 <td>{{ sortie.nbInscriptionMax }}</td>
             </tr>
             <tr>
                 <td><label>Durée : </label></td>
                 <td>{{ sortie.duree }} minutes</td>
             </tr>
             <tr>
                 <td><label>Description et infos : </label></td>
                 <td>{{ sortie.infosSortie }}</td>
             </tr>
         </table>
        </div>
        <div class="col">
            <table class="affichageSortie">
                <tr>
                    <td><label>Campus : </label></td>
                    <td>{{ sortie.campus.nom }}</td>
                </tr>
                <tr>
                    <td><label>Lieu : </label></td>
                    <td>{{ sortie.lieu.nom }}</td>
                </tr>
                <tr>
                    <td><label>Rue : </label></td>
                    <td>{{ sortie.lieu.rue }}</td>
                </tr>
                <tr>
                    <td><label>Code postal : </label></td>
                    <td>{{ sortie.lieu.ville.codePostal }}</td>
                </tr>
                <tr>
                    <td><label>Latitude : </label></td>
                    <td>{{ sortie.lieu.latitude }}</td>
                </tr>
                <tr>
                    <td><label>Longitude : </label></td>
                    <td>{{ sortie.lieu.longitude }}</td>
                </tr>
            </table>
        </div>
        </div>
    </div>
</div>

    {% if sortie.participants.count == 0 %}
    <tr class="row">
        <td class="col-12">
            <div class="h2 display-custom">Personne n'est encore inscrit à cette sortie</div>
        </td>
    </tr>
    {% else %}
    <p>Liste des participants inscrits</p>
    <div class="table-participants">
        <table class="table table-striped table-hover text-center">
            <thead>
            <tr class="row">
                <th class="col-sm-3">Pseudo</th>
                <th class="col-sm-9">Nom</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in sortie.participants %}
            <tr class="row">
                <th class="col-sm-3">
                    {{ participant.pseudo }}
                </th>
                <th class="col-sm-9">
                    {{ participant.prenom }} {{ participant.nom | upper }}
                </th>
            </tr>
            {% endfor %}
    </table>
</div>
    {% endif %}
{% endblock %}

