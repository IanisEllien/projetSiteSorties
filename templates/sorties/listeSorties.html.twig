{% extends '/base.html.twig' %}

{% block title %}
    {{ parent() }} | Accueil
{% endblock %}

{% block body %}
    <h3>Filtrer les sorties</h3>

    <div class="container">
        <div class="row">
            <div>
                {% include 'sorties/_filtre.html.twig' with {form: form} only %}
            </div>
        </div>
    </div>

    <h3>Liste sans mise en forme :</h3>
    <table>
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrit(s)/places</th>
                <th>État</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut | date('d/m/y') }}</td>
                <td>{{ sortie.dateLimiteInscription | date('d/m/y')}}</td>
                <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.etat.libelle}}</td>
                <td>à faire</td>
                <td>{{ sortie.organisateur}}</td>
                <td>à faire</td>
            </tr>
    {% endfor %}
        </tbody>
    </table>
{% endblock %}

